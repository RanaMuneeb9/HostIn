<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pic1" />

    <TextView
        android:id="@+id/fname"
        android:layout_width="370dp"
        android:layout_height="35dp"
        android:layout_above="@+id/dname"
        android:layout_alignEnd="@+id/img"
        android:layout_alignLeft="@+id/img"
        android:layout_alignRight="@+id/img"
        android:layout_alignStart="@+id/img"
        android:layout_marginBottom="0dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="Hostel Name"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dname"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/img"
        android:layout_alignLeft="@+id/img"
        android:layout_alignStart="@+id/img"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="Place"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/dname"
        android:layout_alignEnd="@+id/fname"
        android:layout_alignRight="@+id/fname"
        android:layout_below="@+id/fname"
        android:layout_marginRight="25dp"
        android:layout_toEndOf="@+id/dname"
        android:gravity="right"
        android:text="Payment"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="Featured Hostel"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>